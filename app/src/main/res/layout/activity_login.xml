<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@mipmap/dribbble"
        android:contentDescription="@string/activity_login_icon"/>

    <TextView
        android:id="@+id/activity_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_btn_margin"
        android:text="@string/activity_login_btn_text"
        android:textColor="@color/white"
        style="@style/AppTheme.TextView.Clickable.2.White"/>
</LinearLayout>
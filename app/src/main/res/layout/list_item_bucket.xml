<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/bucket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/bucket_shot_chosen"
            android:textColor="@color/bucket_name_color"
            android:textSize="@dimen/bucket_name_font_size"
            tools:text="Bucket name"/>

        <TextView
            android:id="@+id/bucket_shot_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/bucket_shot_chosen"
            android:layout_below="@+id/bucket_name"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:textColor="@color/bucket_shot_count_color"
            android:textSize="@dimen/bucket_shot_count_font_size"
            tools:text="90 shots"/>

        <ImageView
            android:id="@+id/bucket_shot_chosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"/>


    </RelativeLayout>

    <View
        android:id="@+id/bucket_clickable_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"/>

</androidx.cardview.widget.CardView>